<%- include("../partials/header") %>

<nav>
    <a href="/user"> Go Back </a>
</nav>

<h1> Create Game </h1>


You are: <%= SelectUser.gamerTag %>
<br><br>



<form action="/user/create/new" method="POST">
    <!-- passing some hidden values -->
    <input type="hidden" name="player1gamerTag" value="<%= SelectUser.gamerTag %>">

    <label>
    Add Friend:
    </label>
        <select name="player2gamerTag">
            <% SelectUser.friendTag.forEach((g) => { %>
            <option value="<%= g%>">
                <%= g %>
            </option>
            <% }) %>
            
        </select>
    <br><br>
    
   
    
   
    
     
    
    <label>
    Game Name: </label>
        <input type="text" name="title" autocomplete="off">
    <br><br>

    <label>
        Game Description: </label>
        <input type="text" name="description" autocomplete="off">
    <br><br>

    <label>
    Amount: </label>
        <input type="number" name="amount" min="0" >
    <br><br>
    

    <label>
    or Penalty: </label>
        <input type="text" name="penalty" autocomplete="off">
    <br><br>
    

    <label>
    Expiration: </label>
        <input type="date" name="expiration">
    <br><br>

    <input type="submit" value="Create New Game"> 
</form>









